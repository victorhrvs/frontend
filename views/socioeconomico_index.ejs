<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Notebook para Todos</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                <a class="nav-link" href="/">Alunos</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/local">Locais</a>
                </li>
                <li class="nav-item active">
                <a class="nav-link" href="/socioeconomico">Cadastro Socioeconômico<span class="sr-only">(current)</span></a>
            </ul>
            </div>
    </nav>

    <div class="container-fluid" >

        <h2><%= title %></h2>
        <a href="/socioeconomico_add" class="btn btn-sm btn-primary">Adicionar Cadastro Socioeconômico</a><br/><br/>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Membros na família</th>
              <th>Renda per capita</th>
              <th>Bolsa Família</th>
              <th>PETI</th>
              <th>ProJovem</th>
            </tr>
          </thead>
          <tbody>
              <% cadastros.forEach(function(cadastro){ %>
                  <tr>
                      <td><%= cadastro.numero_de_membros_da_familia %></td>
                      <td><%= cadastro.renda_per_capita %></td>
                      <td><% if (cadastro.programa_bolsa_familia) { %>
                            <p>sim</p>
                          <% }else{ %>  
                            <p>não</p>
                          <% } %>
                      </td>
                      <td><% if (cadastro.programa_de_erradicacao_do_trabalho_infantil) { %>
                          <p>sim</p>
                          <% }else{ %>  
                            <p>não</p>
                          <% } %>
                      </td>
                      <td><% if (cadastro.programa_projovem_adolescente) { %>
                          <p>sim</p>
                          <% }else{ %>  
                            <p>não</p>
                          <% } %>
                      </td>
                      <td>
                          <a href="socioeconomico_edit/<%= cadastro.id_socioeconomico %>" class="btn btn-sm btn-primary">Editar</a>
                          <a href="socioeconomico_delete/<%= cadastro.id_socioeconomico %>" class="btn btn-sm btn-danger">Delete</a>
                      </td>
                  </tr>
              <% }); %>
          </tbody>
        </table>
      </div>

</body>
</html>